<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="300">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/header_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/oxygen_bold"
            android:gravity="bottom|center"
            android:text="친구 목록"
            android:textColor="@color/title_text"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/header_text3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/header_text1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="25"
        android:orientation="horizontal"
        android:weightSum="30">

        <android.widget.Button
            android:id="@+id/miracle_btn"
            android:layout_width="114dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/button_miracle"
            android:text="미라클 모닝"
            android:textColor="#9B6F8C"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck" />

        <android.widget.Button
            android:id="@+id/plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/round_button"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


        <android.widget.Button
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <android.widget.Button
            android:id="@+id/message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="230"
        android:orientation="horizontal"
        android:weightSum="3">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_main"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/friends_recycler_view">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>

<!-- 버튼색이 적용이 안될 때 android.widget. 을 붙이세요 -->