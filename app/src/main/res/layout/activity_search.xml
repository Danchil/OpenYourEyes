<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="300">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/header_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/oxygen_bold"
            android:gravity="bottom|center"
            android:text="검색"
            android:textColor="@color/title_text"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/header_text3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/header_text1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="30">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="16dp"
            android:hint="검색하세요"
            android:textColor="@color/gray_text"
            android:background="@drawable/search_border"
            />

        <android.widget.Button
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:outlineProvider="none"
            android:background="@drawable/btn_round"
            android:drawableLeft="@drawable/ic_dodbogi"
            android:paddingLeft="15dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:weightSum="30">

        <android.widget.Button
            android:id="@+id/miracle_search_btn"
            android:layout_width="114dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:paddingLeft="9dp"
            android:outlineProvider="none"
            android:text="미라클 모닝"
            android:fontFamily="@font/oxygen_bold"
            android:textColor="#9B6F8C"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck" />

        <android.widget.Button
            android:id="@+id/friends_search_btn"
            android:layout_width="114dp"
            android:layout_height="50dp"
            android:layout_marginLeft="45dp"
            android:paddingLeft="9dp"
            android:outlineProvider="none"
            android:text="친구"
            android:fontFamily="@font/oxygen_bold"
            android:textColor="#9B6F8C"
            android:textSize="12sp"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="225"
        android:orientation="horizontal"
        android:weightSum="3">
    </LinearLayout>


</LinearLayout>

    <!-- 버튼색이 적용이 안될 때 android.widget. 을 붙이세요 -->