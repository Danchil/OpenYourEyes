<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="300">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/header_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/oxygen_bold"
            android:layout_marginLeft="50dp"
            android:gravity="bottom|left"
            android:text="이전"
            android:textColor="@color/title_text"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/header_text3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/header_text1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="8dp"
            app:shapeAppearance="@style/circular"
            android:outlineProvider="none"
            app:strokeWidth="10dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/user_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/oxygen_regular"
            android:textColor="@color/black"
            android:text="user name"
            android:textSize="23dp"
            />

        <TextView
            android:id="@+id/name_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_below="@+id/user_name_txt"
            android:layout_toEndOf="@+id/user_name_txt"
            android:layout_toRightOf="@+id/user_name_txt"
            android:fontFamily="@font/oxygen_regular"
            android:text="의 알람 목록"
            android:textSize="16dp" />

        <android.widget.Button
            android:id="@+id/message"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:outlineProvider="none"
            android:background="@drawable/btn_round"
            android:drawableLeft="@drawable/ic_miracle2"
            android:paddingLeft="17dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="225"
        android:orientation="horizontal"
        android:weightSum="3">


    </LinearLayout>


</LinearLayout>

    <!-- 버튼색이 적용이 안될 때 android.widget. 을 붙이세요 -->