<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/gradient_primary"
        android:paddingTop="15dp"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8.5dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/alramName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oxygen_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:text="알람 이름 1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:paddingLeft="0dp">
                <TextView
                    android:id="@+id/alramTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_bold"
                    android:textColor="@color/white"
                    android:textSize="40dp"
                    android:text="5:30"/>
                <TextView
                    android:id="@+id/alramAmpm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen_light"
                    android:paddingLeft="8dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:text="오후"/>
            </LinearLayout>

            <TextView
                android:id="@+id/alramWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:fontFamily="@font/oxygen_light"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:text="월 화 목 토"/>

            <TextView
                android:id="@+id/alramDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:fontFamily="@font/oxygen_light"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:text="9/2  9/10"/>

            <TextView
                android:id="@+id/alramNotRepeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:fontFamily="@font/oxygen_light"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:text="반복 안 함"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchAlram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb"
            android:track="@drawable/track"
            android:switchMinWidth="50dp"/>
    </LinearLayout>
</LinearLayout>